@model ProjectRecycle.Models.Company
@{
    ViewData["Title"] = "Wastes";
    int? companyId = (int)Context.Session.GetInt32("companyId");
}
<head>
    <!--~ Link CSS  -->
    <link rel="stylesheet" href="~/css/Dashboard.css">
    <!--~ Link BOOTSTRAP  -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <!--~ Link Boxicons  -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <title>Dashboard</title>
</head>
<body>

    @await Html.PartialAsync("_Sidebar")

    <section class="dashboard">
        <div class="top d-flex justify-content-between">
            <div></div>
            <div class="top-links align-content-end">
                <a asp-area="" class="text-dark" asp-controller="Home" asp-action="Index">Home</a>
                <a asp-area="" class="text-dark" asp-controller="Offers" asp-action="Index">Explore</a>
            </div>

            <div class="Btn" style="background-color:#427D9D;">

                <div class="sign"><svg viewBox="0 0 512 512"><path d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z"></path></svg></div>

                <form asp-action="Logout" asp-controller="AppUsers" method="post">
                    <button type="submit" class="btn shadow-none border-0 text-white" style="background-color:#427D9D;">Logout</button>
                </form>
            </div>
        </div>

        <div class="dash-content">
            <h4 class="text-center mb-5">Wastes</h4>
            <hr />
            <h2>Wastes Management</h2>
            @if (Model.CompanyWastes.Any())
            {
                <table class="table shadow-lg mt-5">
                    <thead class="table-secondary">
                        <tr>
                            <th>Title</th>
                            <th>Start Price</th>
                            <th>Type</th>
                            <th>Start Date</th>
                        </tr>
                    </thead>
                    <tbody>
                                    @foreach (var waste in Model.CompanyWastes)
                                    {
                            <tr>
                                <td>@waste.Title</td>
                                <td>@waste.Price</td>
                                <td>@waste.Type</td>
                                <td>@waste.CreatedAt.ToString("yyyy-MM-dd")</td>
                            </tr>
                                    }
                    </tbody>
                </table>
            }
            else
            {
                <h3 class="text_info mt-5 text-center">No Waste Created</h3>
            }
            <a class="btn btn-info  p-2 text-decoration-none" asp-action="Create" asp-controller="Wastes">Create Waste</a>
        </div>

</section>
</body>