@{
    int? consultantId = Context.Session.GetInt32("consultantId");
    int? adminId = Context.Session.GetInt32("adminId");
    int? companyId = Context.Session.GetInt32("companyId");
}
<link rel="stylesheet" href="~/css/NavBar.css" asp-append-version="true" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<nav class="navbar navbar-expand-xl navbar-dark bg-dark">
    <img src="~/img/logo3.png" style="width:auto; border-radius:0%"/>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Offers" asp-action="Index">Explore</a>
            </li>
        </ul>

        <div id="navbarCollapse" class="collapse navbar-collapse justify-content-end">
            @if (
            Context.Session.GetInt32("consultantId") != null ||
            Context.Session.GetInt32("adminId") != null ||
            Context.Session.GetInt32("companyId") != null
            )
            {
                @if (
                Context.Session.GetInt32("consultantId") == null &&
                Context.Session.GetInt32("adminId") == null
               )
                {
                    <div class="navbar-nav ">
                        <div class="nav-item dropdown">
                            <a href="#" data-bs-toggle="dropdown" class="nav-item nav-link dropdown-toggle user-action"><img src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_1280.png" class="avatar" alt="Avatar"><b class="caret"></b></a>
                            <div class="dropdown-menu">
                                <a asp-action="Details" asp-controller="Companies" asp-route-id="@companyId" class="dropdown-item"><i class="bi bi-person"></i> Profile</a>
                                <a asp-action="Dashboard" asp-controller="Companies" asp-route-id="@companyId" class="dropdown-item"><i class="bi bi-speedometer"></i> Dashboard</a>
                                <div class="divider dropdown-divider"></div>
                                <form asp-action="Logout" asp-controller="AppUsers" method="post">
                                    <button type="submit" class="btn btn-danger ms-4"><i class="bi bi-box-arrow-right mt-5"></i> Sign out</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
                else if (
                Context.Session.GetInt32("consultantId") == null &&
                Context.Session.GetInt32("companyId") == null
                )
                {

                    <div class="navbar-nav">
                        <div class="nav-item dropdown">
                            <a href="#" data-bs-toggle="dropdown" class="nav-item nav-link dropdown-toggle user-action"><img src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_1280.png" class="avatar" alt="Avatar"><b class="caret"></b></a>
                            <div class="dropdown-menu">
                                
                                <a asp-action="Details" asp-controller="AppUsers" asp-route-id="@adminId" class="dropdown-item"><i class="bi bi-speedometer"></i> Dashboard</a>
                                <div class="divider dropdown-divider"></div>
                                <form asp-action="Logout" asp-controller="AppUsers" method="post">
                                    <button type="submit" class="btn btn-danger ms-4"><i class="bi bi-box-arrow-right mt-5"></i> Sign out</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
                else 
                {
                    <div class="navbar-nav">
                        <div class="nav-item dropdown">
                            <a href="#" data-bs-toggle="dropdown" class="nav-item nav-link dropdown-toggle user-action"><img src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_1280.png" class="avatar" alt="Avatar"><b class="caret"></b></a>
                            <div class="dropdown-menu">
                                <a asp-action="Consultant" asp-controller="AppUsers" asp-route-id="@consultantId" class="dropdown-item"><i class="bi bi-person"></i> Profile</a>
                                <a asp-action="ConsultWaste" asp-controller="AppUsers" asp-route-id="@consultantId" class="dropdown-item"><i class="bi bi-speedometer"></i> Dashboard</a>
                                <div class="divider dropdown-divider"></div>
                                <form asp-action="Logout" asp-controller="AppUsers" method="post">
                                    <button type="submit" class="btn btn-danger ms-4"><i class="bi bi-box-arrow-right mt-5"></i> Sign out</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="d-flex gap-2">
                    <a class="btn btn-success" asp-area="" asp-controller="Companies" asp-action="Create">Register</a>
                    <a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="LoginPage">Login</a>
                </div>
                

            }
        </div>
    </div>
</nav>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    }




